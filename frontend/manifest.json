{
  "manifest_version": 3,
  "name": "Bulk Email Sender",
  "version": "1.0",
  "description": "Send bulk emails with verification",
  "permissions": [
    "storage",
    "activeTab",
    "unlimitedStorage",
    "webRequest"
  ],
  "host_permissions": [
    "https://email-sender-backend-production.up.railway.app/*", 
    "http://localhost:5000/*"
  ],

  "action": {
    "default_popup": "popup.html"
  }
}


